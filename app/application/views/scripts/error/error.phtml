<?php
	$response = array();
	$response['message'] = $this->message;
	
	 if ('development' == APPLICATION_ENV){
		$response['exceptionMessage'] = $this->exception->getMessage();
		$response['stackTrace'] = $this->exception->getTraceAsString();
		$response['requestParameters'] = print_r($this->request->getParams(), true);
	}
	
	echo Zend_Json::encode($response);